<%= render "shared/errors", obj: @user%>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|%>

      <div class="form-group row">
        <div class="col-sm-3 col-form-label">
          <%= f.label :username%>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :username , class: "form-control", placeholder: "Enter username", autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3 col-form-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-9">
          <%= f.email_field :email , class: "form-control", placeholder: "Enter email", autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3 col-form-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-9">
          <%= f.password_field :password , class: "form-control", placeholder: "Enter password", autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-3">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-primary btn-lg") %>
        </div>
      </div>

    <%end%>
    <div class="col-sm-5 offset-sm-5">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>

  </div>
</div>